{
  "name": "react-js-term-selector",
  "description": "A showcase ReactJs package. Its a playground to make the use of the following libraries in use: ReactJS, Redux, TypeScript and Jest.",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-redux-typescript-scripts": "^1.6.2",
    "react-scripts": "3.4.3",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-observable": "^1.2.0",
    "redux-thunk": "^2.3.0",
    "sass": "^1.26.10",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^26.0.14",
    "@types/react-redux": "^7.1.9",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-jest": "^24.9.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.1",
    "typesafe-actions": "^5.1.0",
    "typescript-eslint": "0.0.1-alpha.0",
    "utility-types": "^3.10.0"
  },
  "scripts": {
    "start": "npm run build-css; npx react-scripts start",
    "build": "npm run build-css; npx react-scripts build",
    "test": "npm run build-css; npx react-scripts test",
    "eject": "react-scripts eject",
    "watch-scss": "sass --watch src/scss/App.scss src/App.css --no-source-map",
    "build-css": "npx sass src/scss/App.scss src/App.css --style compressed --no-source-map",
    "build-terms-json": "node ./src/BuildJson.js",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "homepage": "./",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
